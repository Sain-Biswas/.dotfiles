// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // AI Assistant
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },

  // Font
  "ui_font_size": 16,
  "ui_font_family": "DankMono Nerd Font",
  "buffer_font_size": 16,
  "buffer_font_family": "DankMono Nerd Font",

  // Terminal
  "terminal": {
    "font_family": "DankMono Nerd Font",
    "cursor_shape": "bar"
  },

  // Code
  "autosave": "on_focus_change",
  "format_on_save": "on",

  // Extensions
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "git-firefly": true,
    "dockerfile": true,
    "scss": true,
    "svelte": true,
    "lua": true,
    "catppuccin-icons": true,
    "astro": true,
    "docker-compose": true,
    "emmet": true,
    "prisma": true,
    "env": true,
    "hyprlang": true
  },

  // Theme
  "theme": {
    "mode": "dark",
    "light": "Vercel Light",
    "dark": "Vercel Dark"
  },

  // Icon Theme
  "icon_theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },

  // Looks
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "indent_size": 40,
    "scrollbar": {
      "show": "auto"
    }
  },
  "git_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },

  // Language Settings
  "languages": {
    "TypeScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "JavaScript": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": {
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  }
}
