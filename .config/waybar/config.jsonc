{
  /*----------Global Properties-------------*/
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 30,
  "margin-top": 0,
  "margin-right": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  /*----------Modules Left----------------*/
  "modules-left": [
    "clock",
    "custom/playerctl#backward",
    "custom/playerctl#play",
    "custom/playerctl#foward",
    "custom/playerlabel",
  ],
  /*----------Modules Center--------------*/
  "modules-center": ["custom/weather", "hyprland/workspaces", "custom/swaync"],
  /*----------Modules Center--------------*/
  "modules-right": [
    "tray",
    "pulseaudio",
    "network",
    "group/utility",
    "battery",
  ],

  /*----------Hyprland Workspace----------*/
  "hyprland/workspaces": {
    "format": "{id}",
    "format-icons": {
      "*": "",
    },
    "persistent-workspaces": {
      "*": 10, // 5 workspaces by default on every monitor
    },
  },

  /*-----------Weather---------------*/
  "custom/weather": {
    "format": "{}",
    "format-alt": "  {alt}",
    "format-alt-click": "click",
    "interval": 3600,
    "return-type": "json",
    "exec": "$HOME/.dotfiles/scripts/miscellaneous/weather.sh",
    "exec-if": "ping wttr.in -c1",
    "tooltip": true,
  },

  /*-----------SwayNC----------------*/

  "custom/swaync": {
    "tooltip": true,
    "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
    "format": "{} {icon} ",
    "format-icons": {
      "notification": "<span foreground='red'><sup></sup></span>",
      "none": "",
      "dnd-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-none": "",
      "inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "inhibited-none": "",
      "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": "",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },

  /*-----------Cpu, Memory, Colorpicker, Temperature, Idle-inhibitor------*/
  "cpu": {
    "format": "",
    "tooltip": true,
  },
  "memory": {
    "format": "",
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "",
  },
  "custom/colorpicker": {
    "format": " ",
    "interval": "once",
    "on-click": "hyprpicker -a",
    "signal": 1,
  },

  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": "",
    },
  },

  /*----------------Expand---------------*/
  "custom/expand": {
    "format": "",
    "tooltip": true,
    "tooltip-format": "Click to show utilities",
  },

  /*-----------Group-------------------*/
  "group/utility": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "child-utility",
      "transition-left-to-right": true,
      "click-to-reveal": true,
    },
    "modules": [
      "custom/expand",
      "cpu",
      "memory",
      "temperature",
      "idle_inhibitor",
      "custom/colorpicker",
    ],
  },

  /*---------------Playerctl---------------*/
  "custom/playerctl#backward": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": " ",
    "on-click": "playerctl previous",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "tooltip": false,
    "return-type": "json",
  },
  "custom/playerctl#foward": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": " ",
    "on-click": "playerctl next",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "tooltip": false,
    "return-type": "json",
  },
  "custom/playerctl#play": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": "{icon}",
    "format-icons": {
      "Paused": "<span> </span>",
      "Playing": "<span> </span>",
      "Stopped": "<span> </span>",
    },
    "on-click": "playerctl play-pause",
    "return-type": "json",
  },
  "custom/playerlabel": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{markup_escape(album)}}  {{albumArtist}}\"}' -F",
    "format": "<span>  {}</span>",
    "max-length": 40,
    "on-click": "",
    "return-type": "json",
  },
  /*---------------Battery-------------*/

  "battery": {
    "format": "{icon}  {capacity}%",
    "format-charging": "  {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "format-plugged": " {capacity}% ",
    "format-time": "{H} h {m} min",
    "states": {
      "critical": 15,
      "good": 95,
      "warning": 30,
    },
  },

  /*---------------Pulseaudio------------*/
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "format-muted": " ",
    "on-click": "pavucontrol",
    "scroll-step": 5,
  },

  /*--------------Network-----------------*/
  "network": {
    "format-disconnected": " ",
    "format-ethernet": " {signalStrength}%",
    "format-linked": "{ifname} (No IP)",
    "format-wifi": "  {signalStrength}%",
    "tooltip-format": "Connected to {essid} via {ifname} on {gwaddr}",
    "format-alt": "  {ifname}: {ipaddr}/{cidr}",
  },

  /*------------Tray--------------------*/
  "tray": {
    "icon-size": 20,
    "spacing": 8,
  },

  /*------------Clock------------------*/
  "clock": {
    "format": "  {:%I:%M %p}",
    "interval": 1,
    "format-alt": "  {:L%A, %B %d, %Y}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "calendar": {
      "format": {
        "today": "<span color='#fAfBfC'><b>{}</b></span>",
      },
    },
    "actions": {
      "on-click-right": "shift_down",
      "on-click": "shift_up",
    },
  },
}
